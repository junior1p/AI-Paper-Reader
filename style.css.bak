* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: linear-gradient(135deg, #1e3a8a 0%, #312e81 50%, #1e1b4b 100%);
    background-size: 400% 400%;
    animation: gradientShift 15s ease infinite;
    height: 100vh;
    overflow: hidden;
}

@keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

/* 顶部导航栏 - 炫酷版 */
.header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    background-size: 200% 200%;
    animation: headerGradient 8s ease infinite;
    color: white;
    padding: 20px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), 0 0 60px rgba(102, 126, 234, 0.4);
    position: relative;
    overflow: hidden;
}

.header::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: rotate(45deg);
    animation: shine 3s infinite;
}

@keyframes headerGradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@keyframes shine {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.header h1 {
    font-size: 28px;
    font-weight: 700;
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.3), 0 0 20px rgba(255, 255, 255, 0.2);
    position: relative;
    z-index: 1;
    letter-spacing: 1px;
    background: linear-gradient(45deg, #fff, #e0e7ff, #fff);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    animation: textGlow 3s ease-in-out infinite;
}

@keyframes textGlow {
    0%, 100% { filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.5)); }
    50% { filter: drop-shadow(0 0 16px rgba(255, 255, 255, 0.8)); }
}

.header-controls {
    display: flex;
    gap: 15px;
    position: relative;
    z-index: 1;
}

/* 按钮样式 - 超炫酷 */
.btn {
    padding: 12px 24px;
    border: none;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:hover::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
    color: #667eea;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4), 0 0 20px rgba(102, 126, 234, 0.2);
}

.btn-primary:hover:not(:disabled) {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6), 0 0 40px rgba(102, 126, 234, 0.3);
}

.btn-secondary {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10px);
}

.btn-secondary:hover:not(:disabled) {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.2));
    border-color: rgba(255, 255, 255, 0.6);
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
}

.btn-settings {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
    color: white;
    backdrop-filter: blur(10px);
}

.btn-settings:hover {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.15));
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.2);
}

.btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    filter: grayscale(50%);
}

.nav-btn {
    padding: 10px 20px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    transition: all 0.3s ease;
}

.nav-btn:hover {
    background: linear-gradient(135deg, #5568d3, #6a3d94);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
}

/* 设置面板 - 玻璃态 */
.settings-panel {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    padding: 25px 30px;
    border-bottom: 1px solid rgba(225, 232, 237, 0.5);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), 0 0 60px rgba(102, 126, 234, 0.1);
}

.settings-panel h3 {
    margin-bottom: 20px;
    color: #2c3e50;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.setting-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    gap: 15px;
}

.setting-item label {
    width: 100px;
    font-weight: 600;
    color: #4a5568;
}

.setting-item input {
    flex: 1;
    max-width: 500px;
    padding: 12px 18px;
    border: 2px solid #e5e7eb;
    border-radius: 10px;
    font-size: 14px;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.8);
}

.setting-item input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15), 0 4px 20px rgba(102, 126, 234, 0.2);
    transform: translateY(-2px);
}

.setting-actions {
    margin-top: 20px;
    display: flex;
    gap: 12px;
}

/* 主容器 - 玻璃态双栏 */
.main-container {
    display: flex;
    height: calc(100vh - 95px);
    gap: 3px;
    padding: 15px;
}

.panel {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 16px;
    min-width: 0;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2), 0 0 60px rgba(102, 126, 234, 0.1);
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.left-panel {
    border-right: none;
}

.panel-header {
    padding: 20px 25px;
    border-bottom: 1px solid rgba(225, 232, 237, 0.5);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
    position: relative;
    overflow: hidden;
}

.panel-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: slideLight 3s infinite;
}

@keyframes slideLight {
    0% { left: -100%; }
    100% { left: 100%; }
}

.panel-header h2 {
    font-size: 18px;
    color: #2c3e50;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    position: relative;
    z-index: 1;
}

.page-info {
    font-size: 13px;
    color: #6c757d;
    font-weight: 500;
    position: relative;
    z-index: 1;
}

.loading-indicator {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #667eea;
    font-size: 14px;
    font-weight: 600;
}

.spinner {
    width: 20px;
    height: 20px;
    border: 3px solid rgba(102, 126, 234, 0.2);
    border-top-color: #667eea;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
    box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.panel-content {
    flex: 1;
    overflow-y: auto;
    padding: 25px;
    background: rgba(255, 255, 255, 0.5);
}

.panel-content::-webkit-scrollbar {
    width: 10px;
}

.panel-content::-webkit-scrollbar-track {
    background: rgba(241, 241, 241, 0.5);
    border-radius: 5px;
}

.panel-content::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
}

.panel-content::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #5568d3, #6a3d94);
}

.placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #9ca3af;
    font-size: 18px;
    font-weight: 500;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
}

.panel-footer {
    padding: 15px 25px;
    border-top: 1px solid rgba(225, 232, 237, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 25px;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
}

#currentPage {
    font-size: 15px;
    color: #4a5568;
    min-width: 90px;
    text-align: center;
    font-weight: 600;
}

/* PDF 画布 - 炫酷边框 */
#pdfCanvas {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2), 0 0 60px rgba(102, 126, 234, 0.3);
    border-radius: 8px;
    transition: all 0.3s ease;
}

#pdfCanvas:hover {
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3), 0 0 80px rgba(102, 126, 234, 0.4);
    transform: scale(1.02);
}

/* 翻译结果样式 - 渐变高亮 */
.translation-content {
    line-height: 1.9;
    color: #2c3e50;
    font-size: 15px;
    animation: fadeIn 0.6s ease-in;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.translation-content p {
    margin-bottom: 18px;
    transition: all 0.3s ease;
}

.translation-content p:hover {
    color: #1a202c;
    transform: translateX(5px);
}

.translation-content h1,
.translation-content h2,
.translation-content h3 {
    margin: 25px 0 15px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
}

.translation-content ul,
.translation-content ol {
    margin-left: 30px;
    margin-bottom: 18px;
}

.translation-content li {
    margin-bottom: 10px;
    position: relative;
    padding-left: 10px;
}

.translation-content li::before {
    content: '';
    position: absolute;
    left: -15px;
    top: 10px;
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(102, 126, 234, 0.6);
}

.translation-content code {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    padding: 3px 8px;
    border-radius: 6px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
    border: 1px solid rgba(102, 126, 234, 0.2);
}

.translation-content pre {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
    padding: 20px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 20px 0;
    border: 1px solid rgba(102, 126, 234, 0.2);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.1);
}

.translation-content blockquote {
    border-left: 5px solid transparent;
    border-image: linear-gradient(135deg, #667eea, #764ba2) 1;
    padding-left: 20px;
    margin: 20px 0;
    color: #6c757d;
    font-style: italic;
    background: rgba(102, 126, 234, 0.05);
    padding: 15px 20px;
    border-radius: 0 8px 8px 0;
}

/* 分页翻译 - 炫酷分隔 */
.page-translation {
    border-bottom: 2px solid transparent;
    border-image: linear-gradient(90deg, transparent, #667eea, #764ba2, transparent) 1;
    padding-bottom: 25px;
    margin-bottom: 25px;
    animation: fadeIn 0.6s ease-in;
}

.page-translation:last-child {
    border-bottom: none;
}

.page-number {
    display: inline-block;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 6px 16px;
    border-radius: 25px;
    font-size: 13px;
    font-weight: 700;
    margin-bottom: 18px;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4), 0 0 20px rgba(102, 126, 234, 0.2);
    animation: glow 2s ease-in-out infinite;
}

@keyframes glow {
    0%, 100% { box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4), 0 0 20px rgba(102, 126, 234, 0.2); }
    50% { box-shadow: 0 4px 20px rgba(102, 126, 234, 0.6), 0 0 30px rgba(102, 126, 234, 0.4); }
}

/* PDF 页面样式 */
.pdf-page canvas {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
}

/* 翻译页面样式 */
.translated-page {
    page-break-inside: avoid;
}

.translated-page .page-number {
    display: block;
    text-align: center;
    margin-bottom: 0;
    padding: 10px 20px;
    font-size: 15px;
}

.translated-page .content-wrapper {
    position: relative;
}

.translation-overlay {
    backdrop-filter: blur(3px);
}

.translation-text {
    white-space: pre-wrap;
    word-wrap: break-word;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}